{
  "name": "electron-react",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "NTSciccio",
    "email": "your.email@domain.com",
    "url": "https://your-website.com"
  },
  "build": {
    "appId": "com.NTS.app",
    "productName": "ProvaReactElectron",
    "copyright": "Copyright Â© 2020 ${author}",
    "mac": {
      "category": "Utility"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "snap",
        "AppImage"
      ]
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-script": "^2.0.5",
    "react-scripts": "^3.4.1"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "start-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\" --kill-others",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build",
    "pack-all": "npm run preelectron-pack && build -mwl",
    "pack-mac": "npm run preelectron-pack && build -m",
    "pack-win": "npm run preelectron-pack && build -w",
    "pack-lnx": "npm run preelectron-pack && build -l"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "rescripts": [
    "env"
  ],
  "devDependencies": {
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.5",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "electron": "^4.0.6",
    "node-sass": "^4.11.0",
    "prettier": "2.0.5",
    "wait-on": "^3.2.0"
  }
}
